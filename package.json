{
  "name": "no-push-oops",
  "version": "1.0.6",
  "description": "A Git pre-push hook that runs your preflight checks to prevent oops moments",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "no-push-oops": "dist/cli.js",
    "no-push-oops-run": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepare": "npm run build",
    "postinstall": "node scripts/postinstall.js || exit 0",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "git",
    "hook",
    "pre-push",
    "preflight",
    "quality",
    "ci",
    "testing",
    "linting",
    "validation"
  ],
  "author": "Sheikh",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sheikhmohdnazmulhasan/no-push-oops.git"
  },
  "bugs": {
    "url": "https://github.com/sheikhmohdnazmulhasan/no-push-oops/issues"
  },
  "homepage": "https://github.com/sheikhmohdnazmulhasan/no-push-oops#readme",
  "files": [
    "dist",
    "scripts",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "chalk": "^4.1.2"
  }
}
